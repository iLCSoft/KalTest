#!/bin/csh
#######################
#  create a list of depend files of g++
#$Id: cxxdepends,v 1.1.1.1 2005-06-04 20:55:37 yamaguti Exp $
#######################

#echo $argv[1]

set cxx="gcc"
set iret=`which $cxx | grep -c /`
if ( $iret > 0 ) then
  set gccvers=`$cxx -v |& head -1 | sed -e 's;[^/]*\(/.*\)/specs.*;\1;'`
  set cppfile=$gccvers/cc1
  if ( -e $cppfile ) then
  else
    set cppfile=$gccvers/cpp
  endif
  
  set strcmd=`which strings`
  set incdir=`$strcmd $cppfile  | grep include  | grep "/"`
  foreach i ( $incdir )
    if ( -e $i && $i != "/usr/include" ) then
	echo -n " -I$i" 
    endif
  end
endif


